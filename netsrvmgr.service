[Unit]
Description= Network Manager Services (wifi, moca and bluetooth) Daemon
After= iarmbusd.service
Requires=iarmbusd.service

[Service]
ExecStart=/usr/bin/netsrvmgr --debugconfig /etc/debug.ini --configFilePath /etc/netsrvmgr.conf 
ExecStop=/bin/kill -15 $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
